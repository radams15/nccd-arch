######## DMZRouter #########
ip addr add 192.168.0.2/24 dev eth0
ip link set eth0 up 

ip addr add 192.168.1.1/24 dev eth1
ip link set eth1 up 

ip addr add 172.16.0.1/24 dev eth2
ip link set eth2 up 

# Routing

ip route add default via 192.168.0.1
ip route add 172.26.0.0/24 via 192.168.1.2
ip route add 10.10.0.0/16 via 192.168.1.2
ip route add 172.36.0.0/24 via 192.168.1.2

# Firewall

iptables --policy FORWARD DROP

iptables -A FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT

iptables -A FORWARD -m conntrack --ctstate NEW -i eth1 -o eth2 -p tcp --match multiport --dports 25,587,993 -j ACCEPT
iptables -A FORWARD -m conntrack --ctstate NEW -i eth0 -o eth2 -p tcp --match multiport --dports 25,587,993 -j ACCEPT
iptables -A FORWARD -m conntrack --ctstate NEW -i eth1 -o eth0 -p tcp --match multiport --dports 80,443 --source 172.26.0.2 -j ACCEPT
iptables -A FORWARD -m conntrack --ctstate NEW -i eth1 -o eth0 -s 172.26.0.4 -p tcp --dport 53 -j ACCEPT
iptables -A FORWARD -m conntrack --ctstate NEW -i eth1 -o eth0 -s 172.26.0.4 -p udp --dport 53 -j ACCEPT
