###### InternalDmzRouter ######

# Interface Configuration

ip addr add 10.10.0.2/16 dev eth0
ifconfig eth0 up


ip addr add 172.36.0.1/24 dev eth1
ifconfig eth1 up

ip addr add 192.168.5.2/24 dev eth2
ifconfig eth2 up

# Static Route Configuration

ip route add default via 10.10.0.1 

# Firewall Rules

iptables --policy FORWARD DROP
iptables -A FORWARD -m state --state RELATED,ESTABLISHED -j ACCEPT

iptables -m state --state NEW -s 10.10.0.0/16 -d 172.36.0.2 --proto TCP --dport 389 -j ACCEPT
iptables -m state --state NEW -s 10.10.0.0/16 -d 172.36.0.2 --proto UDP --dport 389 -j ACCEPT
